<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brisksoft.ad340">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.brisksoft.ad340.FirebaseActivity"
            android:label="@string/title_activity_firebase"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />
        <activity
            android:name="com.brisksoft.ad340.TrafficCamActivity"
            android:label="@string/title_activity_traffic_cam"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />
        <activity
            android:name="com.brisksoft.ad340.MovieListActivity"
            android:label="@string/title_activity_movie_list"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <service
            android:name="com.brisksoft.ad340.FetchAddressIntentService"
            android:exported="false" />

        <activity
            android:exported="true"
            android:name="com.brisksoft.ad340.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.brisksoft.ad340.RecyclerWebActivity"
            android:label="@string/title_activity_recycler_web"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />
        <activity
            android:name="com.brisksoft.ad340.RecyclerActivity"
            android:label="@string/title_activity_recycler"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />
        <activity
            android:name="com.brisksoft.ad340.ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />
        <activity
            android:name="com.brisksoft.ad340.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />
        <activity
            android:name="com.brisksoft.ad340.MapActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />
        <activity
            android:name="com.brisksoft.ad340.MovieActivity"
            android:label="@string/title_activity_movie"
            android:parentActivityName="com.brisksoft.ad340.RecyclerActivity" />
        <activity
            android:name="com.brisksoft.ad340.TrafficCamMap"
            android:label="@string/title_activity_traffic_cam_map"
            android:parentActivityName="com.brisksoft.ad340.MainActivity" />
    </application>

</manifest>